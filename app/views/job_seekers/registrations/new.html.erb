<h2>Formulário de inscrição para se candidatar  </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "job_seekers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> minímo de caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :social_name %><br />
    <%= f.text_field :social_name%>
  </div>

  <div class="field">
    <%= f.label :cpf %><br />
    <%= f.text_field :cpf%>
  </div>
  
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.telephone_field :phone%>
  </div>

  <div class="field">
    <%= f.label :cv %><br />
    <%= f.text_area :cv, size:"150x20"%>
  </div>

  <div class="actions">
    <%= f.submit "Inscrever-se" %>
  </div>
<% end %>

<%= render "job_seekers/shared/links" %>
