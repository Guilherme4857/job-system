<% if @company.errors.any?%>
  <% @company.errors.each do |error| %>
    <dt><%=error.full_message%></dt> 
  <% end %>
<% end %>

<h1>Formul√°rio de Cadastro da Empresa</h1>

<%=form_with model: [:employees, @company] do |f|%>
  <dt>
  <%=f.label :name%><br>
  <%=f.text_field :name%>
  </dt>
  <br>
  <dt>
  <%=f.label :company_picture%><br>
  <%=f.file_field :company_picture%>
  </dt>
  <br>
  <dt>
  <%=f.label :cnpj%><br>
  <%=f.text_field :cnpj%>
  </dt>
  <br>
  <dt>
  <%=f.label :site%><br>
  <%=f.url_field :site%>
  </dt>
  <%number = 0%>
  
  <%=f.fields_for :company_social_webs do |social_web|%>
    <br>
    <dt>
    <%= social_web.label :address_web, "Rede Social #{number += 1}"%><br>
    <%= social_web.url_field :address_web%>
    </dt>
    
  <% end %>
    <br>
  <%=f.fields_for :company_address do |info|%>
    <dt>
    <%= info.label :public_place%><br>
    <%= info.text_field :public_place%>
    </dt>
    <br>
    <dt>
    <%= info.label :district%><br>
    <%= info.text_field :district%>
    </dt>
    <br>
    <dt>
    <%= info.label :city%><br>
    <%= info.text_field :city%>
    </dt>
    <br>
    <dt>
    <%= info.label :zip_code%><br>
    <%= info.text_field :zip_code%>
    </dt>
  <% end %>
  <br>
  <dt>
  <%=f.label :company_history%><br>
  <%=f.text_area :company_history, size: '150x20'%>
  </dt>
  <br>
  <dt>
  <%=f.submit%>
  </dt>
<% end %>