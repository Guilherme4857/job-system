<h1 class='jobseekers' id='header'><%=@job_seeker_model_name%></h1>

<div class='jobseekers' id='body'>
  <% if @applied_job_seekers == []%>
    <dt>Nenhum candidato às vagas</dt>
  <% end %>

  <%@applied_job_seekers.each do |job_seeker| %>
    <dt><%='Pendente de avaliação'%></dt>
    <dt>
    <%=@social_name%>: 
    <%=link_to job_seeker.social_name, employees_company_job_job_seeker_path(
                                       current_employee.company, job_seeker.jobs.first,  job_seeker)%>
    </dt>
    <dt><%=@email%>: <%=job_seeker.email%></dt>
    <dt><%=@phone%>: <%=job_seeker.phone%></dt>
  <% end %>
</div>

<dt><%=link_to 'Voltar', employees_company_path(current_employee.company)%></dt>